#!/bin/bash

set -euo pipefail

HERE=$(dirname $0)

screenshot () {
    project="${1}"
    if [[ ! -f "${project}/screenshot.png" ]]
    then
        node "${HERE}/screenshot.js" "${project}"
    fi
}

project_dates () {
    projects=$(git ls-files | grep -v scripts | grep / |cut -d / -f 1 | uniq)
    for project in $projects;
    do
        screenshot "${project}" >&2
        index="${project}/index.html"
        img="${project}/screenshot.png"
        date=$(git log --format="format:%cs"  --diff-filter=A -- "${index}")
        title=$(grep -o -P '(?<=<title>)(.+)(?=</title>)' "${index}")
        link="<span><a href='${index}'><img src='${img}' />${title}</a> (${date})</span>"
        echo "${date}|${link}"
    done
}

create_index () {
    index=$(project_dates | sort -r | cut -d \| -f 2)
    style=$(cat styles.css)
    title="Data Visualization Projects"
    date=$(date)

    cat > index.html <<EOF
<!DOCTYPE html>
<meta charset="utf-8">
<html>
    <head>
        <title>${title}</title>
        <style>
         ${style}
        </style>
    </head>
    <body>
      <div class="content">
        <h1 class="header">${title}</h1>
        <div class="projects">
          ${index}
        </div>
        <footer>Last updated: ${date}</footer>
      </div>
    </body>
</html>
EOF
}

pushd "${HERE}/.."
create_index
popd
